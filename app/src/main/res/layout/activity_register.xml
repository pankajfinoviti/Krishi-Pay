<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Register"
        app:titleTextColor="@color/white" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bg_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_15sdp"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            >

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:hint="Name"

                android:textColorHint="@color/black"
                app:hintTextColor="@color/black"
                android:visibility="visible"
                app:errorEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_name_ic">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLines="1"
                    android:background="@color/white"
                    android:paddingTop="@dimen/_18sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:singleLine="true"
                    android:textColor="@color/textGray"
                    android:textColorHint="@color/textHintGray"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile"
                android:textColorHint="@color/black"
                app:hintTextColor="@color/black"
                android:visibility="visible"
                app:errorEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_user_ic">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:importantForAutofill="no"
                    android:digits="1234567890"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:maxLines="1"

                    android:background="@color/white"
                    android:paddingTop="@dimen/_18sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:singleLine="true"
                    android:textColor="@color/textGray"
                    android:textColorHint="@color/textHintGray"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColorHint="@color/black"
                app:hintTextColor="@color/black"
                android:visibility="visible"
                app:errorEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLines="1"
                    android:background="@color/white"
                    android:paddingTop="@dimen/_18sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:singleLine="true"
                    android:textColor="@color/textGray"
                    android:textColorHint="@color/textHintGray"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shop Name"
                android:textColorHint="@color/black"
                app:hintTextColor="@color/black"
                android:visibility="visible"
                app:errorEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_store">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etShop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLines="1"
                    android:background="@color/white"
                    android:paddingTop="@dimen/_18sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:singleLine="true"
                    android:textColor="@color/textGray"
                    android:textColorHint="@color/textHintGray"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pan Card"
                android:textColorHint="@color/black"
                app:hintTextColor="@color/black"
                android:visibility="visible"
                app:errorEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_card_ic">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:background="@color/white"
                    android:paddingTop="@dimen/_18sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:singleLine="true"
                    android:textColor="@color/textGray"
                    android:textColorHint="@color/textHintGray"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Aadhaar Card"
                android:textColorHint="@color/black"
                app:hintTextColor="@color/black"
                android:visibility="visible"
                app:errorEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_aadhar_ic">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAadhar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:background="@color/white"
                    android:paddingTop="@dimen/_18sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:singleLine="true"
                    android:textColor="@color/textGray"
                    android:textColorHint="@color/textHintGray"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="State"

                android:textColorHint="@color/black"
                app:hintTextColor="@color/black"
                android:visibility="visible"
                app:errorEnabled="true"
                android:focusable="false"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_state_ic">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLines="1"
                    android:focusable="false"
                    android:background="@color/white"
                    android:paddingTop="@dimen/_18sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:singleLine="true"

                    android:textColor="@color/textGray"
                    android:textColorHint="@color/textHintGray"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:textColorHint="@color/black"
                app:hintTextColor="@color/black"
                android:visibility="visible"
                app:errorEnabled="true"
                android:focusable="false"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_city_i">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLines="1"
                    android:focusable="false"
                    android:background="@color/white"
                    android:paddingTop="@dimen/_18sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:singleLine="true"
                    android:textColor="@color/textGray"
                    android:textColorHint="@color/textHintGray"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:textColorHint="@color/black"
                app:hintTextColor="@color/black"
                android:visibility="visible"
                app:errorEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_address_ic">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLines="1"
                    android:background="@color/white"
                    android:paddingTop="@dimen/_18sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:singleLine="true"
                    android:textColor="@color/textGray"
                    android:textColorHint="@color/textHintGray"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pincode"
                android:textColorHint="@color/black"
                app:hintTextColor="@color/black"
                android:visibility="visible"
                app:errorEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_pincode_ic">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLines="1"
                    android:maxLength="6"
                    android:background="@color/white"
                    android:paddingTop="@dimen/_18sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:singleLine="true"
                    android:textColor="@color/textGray"
                    android:textColorHint="@color/textHintGray"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shop Registration No"
                android:textColorHint="@color/black"
                app:hintTextColor="@color/black"
                android:visibility="visible"
                app:errorEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_reg">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRegNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLines="1"
                    android:background="@color/white"
                    android:paddingTop="@dimen/_18sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:singleLine="true"
                    android:textColor="@color/textGray"
                    android:textColorHint="@color/textHintGray"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Referral Code"
                android:textColorHint="@color/black"
                app:hintTextColor="@color/black"
                android:visibility="visible"
                app:errorEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconDrawable="@drawable/ic_referral">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etReferralCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLines="1"
                    android:background="@color/white"
                    android:paddingTop="@dimen/_18sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:singleLine="true"
                    android:textColor="@color/textGray"
                    android:textColorHint="@color/textHintGray"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="visible" />
            </com.google.android.material.textfield.TextInputLayout>


            <Spinner
                android:id="@+id/spnrSlug"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/sign_edit_bg"
                android:textSize="14sp"
                android:paddingStart="10sp"
                android:inputType="text"
                android:gravity="center_vertical"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <include
                    android:id="@+id/shopView"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    layout="@layout/m_document_image_preview"
                    />

                <include
                    android:id="@+id/certicateView"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    layout="@layout/m_document_image_preview"
                    />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceed"
                android:textColor="@color/white"
                android:background="@drawable/bg_button"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>